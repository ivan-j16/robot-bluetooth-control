<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <View
        android:id="@+id/view1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/down_btn"
        android:layout_width="92dp"
        android:layout_height="97dp"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_action_down" />

    <ImageView
        android:id="@+id/up_btn"
        android:layout_width="92dp"
        android:layout_height="97dp"
        android:layout_above="@+id/view1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_action_up" />

    <ImageView
        android:id="@+id/right_btn"
        android:layout_width="92dp"
        android:layout_height="97dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/view1"
        android:src="@drawable/ic_action_right" />

    <ImageView
        android:id="@+id/left_btn"
        android:layout_width="92dp"
        android:layout_height="97dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/view1"
        android:src="@drawable/ic_action_left" />

    <ImageView
        android:id="@+id/speak_btn"
        android:layout_width="92dp"
        android:layout_height="97dp"
        android:layout_above="@id/up_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:src="@drawable/ic_action_speakalt" />

    <ImageView
        android:id="@+id/dis_btn"
        android:layout_width="92dp"
        android:layout_height="97dp"
        android:layout_below="@id/down_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:src="@drawable/ic_action_disconnect" />

    <TextView
        android:id="@+id/tb_anbot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/johanneke"
        android:gravity="center"
        android:text="Anbot"
        android:textAllCaps="true"
        android:textColor="#FF9800"
        android:textSize="80sp"></TextView>

</RelativeLayout>